<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:fitsSystemWindows="true"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.lenovo.demo_grideview_scoreview.UiActivity.ConfigurationChangeActivity">
    <Button
        android:layout_marginTop="8dp"
        android:id="@+id/btn_activity_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36555452"
        android:text="切换屏幕"
        android:textColor="#ef000000"
        android:textSize="@dimen/dp_14" />
    <TextView
        android:gravity="center"
        android:layout_marginTop="12dp"
        android:padding="8dp"
        android:id="@+id/tv_activity_new"
        android:layout_below="@+id/btn_activity_change"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#36555452"
        android:text="当前屏幕"
        android:textColor="#ef000000"
        android:textSize="@dimen/dp_14" />
</RelativeLayout>
